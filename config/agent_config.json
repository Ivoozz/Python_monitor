{
    "host": "0.0.0.0",
    "port": 8000,
    "check_interval": 30,
    "log_level": "INFO",
    "log_file": "/var/log/monitor_agent.log",
    "metrics": {
        "enable_temperature": true,
        "enable_cpu": true,
        "enable_memory": true,
        "enable_disk": true,
        "enable_security": true
    },
    "security": {
        "allowed_ips": ["127.0.0.1", "192.168.1.0/24"],
        "require_auth": false
    }
}
